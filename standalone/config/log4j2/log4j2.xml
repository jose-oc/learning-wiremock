<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %logger{36} (%F:%L) - %msg%n"/>
    </Console>

    <RollingFile name="WiremockLog" fileName="logs/wiremock.log" filePattern="logs/wiremock-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d %p %c{1.}:%L [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
    </RollingFile>
    <Async name="Async">
      <AppenderRef ref="WiremockLog"/>
    </Async>

  </Appenders>
  <loggers>
    <Logger name="wiremock" level="debug">
      <appender-ref ref="WiremockLog"/>
    </Logger>
    <root level="WARN">
      <appender-ref ref="Console"/>
    </root>
  </loggers>
</Configuration>
